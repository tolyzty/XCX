
.nav{width:100%;height:100rpx;display:flex;flex-direction:row;}
.default{line-height:100rpx;text-align:center;flex:1;border-right:1px solid gainsboro;color:#000;font-weight:bold;font-size:28rpx;}
.red{
    border-bottom: 2px solid red;
    line-height:100rpx;
    text-align:center;
    color:#fc5558;
    flex:1;
    border-right:1px solid gainsboro;
    font-weight:bold;
    font-size:28rpx;
    }
.show{display:block;text-align:center;line-height:200rpx;}
.hidden{display:none;text-align:center;line-height:200px;}
.order {
    width: 94%;
    margin: 10px 3%;
}
.order .orderli {
    border-radius: 5px;
    border: 1px solid #ddd;
    background: #fff;
    overflow: hidden;
    margin-bottom: 10px;
}
.order .orderli p {
    line-height: 45px;
    font-weight: normal;
    padding: 0 10px;
    overflow: hidden;
}
.order .orderli  p .span {
    float: left;
    border-bottom: 1px solid #ddd;
    margin-left: 15px;
    width: 85%;
    font-size: 14px;
}
.order .orderli .h2 {
    border-bottom: 1px solid #ddd;
    line-height:43px;
    font-weight: normal;
    padding: 0 10px;
    overflow: hidden;
}
.order .orderli .h2 i {
    height: 20px;
    width: 2px;
    background: #ff2c4c;
    float: left;
    display: block;
    margin-top: 12px;
}
.order .orderli .h2 .span {
    float: left;
    margin-left: 10px;
    font-size: 14px;
}
.order .orderli .h2 b {
    color: #ff2c4c;
    float: right;
    margin-right: 5px;
    font-weight: normal;
    font-size: 14px;
}
.order .orderli .h2 em {
    color: #999;
    float: right;
    font-size: 1rem;
    font-style: normal;
    margin-right: 8px;
}
.order .orderli .h3 {
    font-weight: normal;
    padding: 10px;
    overflow: hidden;
}
.order .orderli .h3 .span {
    color: #ff2c4c;
    float: left;
    line-height: 35px;
    font-size: 14px;
}
.order .orderli .h3 .current {
    background: #ff2c4c;
    color: #fff;
}
.order .orderli .h3 .aa {
    float: right;
    border: 1px solid #ddd;
    line-height: 35px;
    border-radius: 5px;
    padding: 0 15px;
    margin-right: 5px;
    display: inline-block;
    font-size: 12px;
}
.h1, .h2, .h3, .h4, .h5, .h6 {
    font-family: 微软雅黑;
    padding: 0px;
    margin: 0px;
}
.h2 {
    font-size: 1.25em;
}