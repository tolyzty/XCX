/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.slide-image{  
    width: 100%;  
}  

.mui-slider {
    border-top: 1px solid #F5F5F5;
    border-bottom: 1px solid #F5F5F5;
}
.top {
    width: 90%;
    margin: 1vh auto;
    overflow: hidden;
}
.left-search {
    float: left;
    width: 88%;
}
.right-car {
    float: right;
    width: 6%;
}
.left-search {
    float: left;
    width: 88%;
}
.left-search input {
    border: none;
    color: #bababa;
    width: 100%;
    border-radius: 5px;
    font-size: 14px;
    background: #f3f3f3 url(/image/icon-search.png) no-repeat 4% center ;
    background-size: 5%;
    padding-left: 13%;
    margin: 0;
    height: 30px;
    line-height: 30px;
}
.index-fenlei{
  height: 126px;
}
.index-fenlei ul {
    overflow: hidden;
    padding: 2vh 0;
    width: 90%;
    margin: 0 auto;
}
.index-fenlei ul li {
    float: left;
    width: 24%;
    text-align: center;
}

.index-fenlei ul li .navs{
  text-decoration:none;
  color:#555;width:79px;height:96px;margin-top: 15px;margin-left:13px;
}
.navs .liimage{
  width:100%;height:100%;
}

ul, li {
    list-style: none;
}
.type-banner, .type-banner image {
    width: 100%;
}
.index-type .more {
    width: 90%;
    margin: 2vh auto;
    text-align: right;
}
.index-type .type-pro {
    width: 90%;
    margin: 0 auto;
    overflow: hidden;
}
.index-type .type-pro dl:nth-child(odd) {
    margin-right: 5%;
}
.index-type .type-pro dl {
    width: 47.5%;
    float: left;
}
.index-type .type-pro dl dt, .index-type .type-pro dl dt img {
    width: 100%;
}

.index-type .type-pro dl dd p:first-child {
    color: #666;
    font-size: 16px;
}
.index-type .type-pro dl dd p {
    margin: 0;
}
.index-type .type-pro dl dd {
    text-align: center;
    padding: 2vh 0;
}
.index-type .type-pro dl dd p.price span:first-child {
    color: #c55400;
    font-size: 14px;
}
.index-type .type-pro dl:nth-child(odd) {
    margin-right: 5%;
}
.index-type .type-pro dl {
    width: 47.5%;
    float: left;
}
.index-type .type-pro dl dd p.price span:last-child {
    color: #c0c0c0;
    font-size: 12px;
    text-decoration: line-through;
}
body {
    font-family: 'Helvetica Neue', Helvetica, light;

}
.index-type .type-pro dl dt, .index-type .type-pro dl dt .ssimg {
    width: 100%;
}
